{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 200,
  "height": 20,
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "data/cars.json",
      "format": {"type": "json"},
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["Origin"],
          "ops": ["sum"],
          "fields": ["Acceleration"],
          "as": ["sum_Acceleration"]
        },
        {
          "type": "stack",
          "groupby": [],
          "field": "sum_Acceleration",
          "sort": {"field": ["Origin"], "order": ["descending"]},
          "as": ["sum_Acceleration_start", "sum_Acceleration_end"],
          "offset": "zero"
        }
      ]
    }
  ],
  "signals": [{"name": "height", "update": "height"}],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "data": "source_0",
          "name": "stack_group_main",
          "groupby": [],
          "aggregate": {
            "fields": [
              "sum_Acceleration_start",
              "sum_Acceleration_start",
              "sum_Acceleration_end",
              "sum_Acceleration_end"
            ],
            "ops": ["min", "max", "min", "max"]
          }
        }
      },
      "encode": {
        "update": {
          "yc": {"signal": "height", "mult": 0.5},
          "height": {"value": 18},
          "x": {
            "signal": "min(scale('x',datum[\"min_sum_Acceleration_start\"]),scale('x',datum[\"max_sum_Acceleration_start\"]),scale('x',datum[\"min_sum_Acceleration_end\"]),scale('x',datum[\"max_sum_Acceleration_end\"]))"
          },
          "x2": {
            "signal": "max(scale('x',datum[\"min_sum_Acceleration_start\"]),scale('x',datum[\"max_sum_Acceleration_start\"]),scale('x',datum[\"min_sum_Acceleration_end\"]),scale('x',datum[\"max_sum_Acceleration_end\"]))"
          },
          "clip": {"value": true}
        }
      },
      "marks": [
        {
          "type": "group",
          "encode": {
            "update": {
              "x": {
                "signal": "-min(scale('x',parent[\"min_sum_Acceleration_start\"]),scale('x',parent[\"max_sum_Acceleration_start\"]),scale('x',parent[\"min_sum_Acceleration_end\"]),scale('x',parent[\"max_sum_Acceleration_end\"]))"
              },
              "height": {"field": {"group": "height"}}
            }
          },
          "marks": [
            {
              "name": "marks",
              "type": "rect",
              "style": ["bar"],
              "from": {"data": "stack_group_main"},
              "encode": {
                "update": {
                  "fill": {"scale": "color", "field": "Origin"},
                  "x": {"scale": "x", "field": "sum_Acceleration_end"},
                  "x2": {"scale": "x", "field": "sum_Acceleration_start"},
                  "height": {"field": {"group": "height"}}
                }
              }
            }
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": {
        "data": "source_0",
        "fields": ["sum_Acceleration_start", "sum_Acceleration_end"]
      },
      "range": [0, {"signal": "width"}],
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "source_0", "field": "Origin", "sort": true},
      "range": "category"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "grid": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "domain": false,
      "labels": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "Sum of Acceleration",
      "labelFlush": true,
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "zindex": 0
    }
  ],
  "legends": [
    {
      "fill": "color",
      "gradientLength": {"signal": "clamp(height, 64, 200)"},
      "symbolType": "square",
      "title": "Origin"
    }
  ]
}
